<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.notebook.NotebookController">
   <center>
      <TextArea fx:id="textArea" prefHeight="346.0" prefWidth="616.0" BorderPane.alignment="CENTER">
         <contextMenu>
            <ContextMenu fx:id="contextMenu">
              <items>
                <MenuItem fx:id="undoContextMenuItem" mnemonicParsing="false" onAction="#onUndo" text="撤销" />
                  <MenuItem fx:id="redoContextMenuItem" mnemonicParsing="false" onAction="#onRedo" text="恢复" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="cutContextMenuItem" mnemonicParsing="false" onAction="#onCut" text="剪切" />
                  <MenuItem fx:id="copyContextMenuItem" mnemonicParsing="false" onAction="#onCopy" text="复制" />
                  <MenuItem fx:id="pasteContextMenuItem" mnemonicParsing="false" onAction="#onPaste" text="粘贴" />
                  <MenuItem fx:id="deleteContextMenuItem" mnemonicParsing="false" onAction="#onDelete" text="删除" />
