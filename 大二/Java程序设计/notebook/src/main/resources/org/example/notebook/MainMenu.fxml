   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="文件">
            <items>
              <MenuItem fx:id="newFileMenuItem" mnemonicParsing="false" onAction="#onNewFile" text="新建">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="openFileMenuItem" mnemonicParsing="false" onAction="#onOpenFile" text="打开">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="saveFileMenuItem" mnemonicParsing="false" onAction="#onSaveFile" text="保存">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="saveAsMenuItem" mnemonicParsing="false" onAction="#onSaveAsFile" text="另存为">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                     </accelerator></MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="pageSetMenuItem" mnemonicParsing="false" onAction="#pageSet" text="页面设置" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#onExit" text="退出" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="编辑">
            <items>
              <MenuItem fx:id="undoMenuItem" mnemonicParsing="false" onAction="#onUndo" text="撤销">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Z" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="redoMenuItem" mnemonicParsing="false" onAction="#onRedo" text="重做">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Y" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="cutMenuItem" mnemonicParsing="false" onAction="#onCut" text="剪切">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="copyMenuItem" mnemonicParsing="false" onAction="#onCopy" text="复制">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="C" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="pasteMenuItem" mnemonicParsing="false" onAction="#onPaste" text="粘贴">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="V" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="deleteMenuItem" mnemonicParsing="false" onAction="#onDelete" text="删除">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="DELETE" control="UP" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="findMenuItem" mnemonicParsing="false" onAction="#onFind" text="查找">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="F" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="findNextMenuItem" mnemonicParsing="false" onAction="#onFindNext" text="查找下一个">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="F3" control="UP" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                  <MenuItem fx:id="findPreMenuItem" mnemonicParsing="false" onAction="#onFindPre" text="查找上一个">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="F3" control="UP" meta="UP" shift="DOWN" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="replaceMenuItem" mnemonicParsing="false" onAction="#onFind" text="替换">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="gotoMenuItem" mnemonicParsing="false" onAction="#onGoto" text="转到">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="G" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="selectAllMenuItem" mnemonicParsing="false" onAction="#onSelectAll" text="全选">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="timeMenuItem" mnemonicParsing="false" onAction="#onTime" text="时间/日期" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="fontMenuItem" mnemonicParsing="false" onAction="#onFontChoose" text="字体" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="查看">
            <items>
                  <Menu mnemonicParsing="false" text="缩放">
                    <items>
                      <MenuItem fx:id="zoomInMenuItem" mnemonicParsing="false" onAction="#zoomIn" text="放大">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="ADD" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="zoomOutMenuItem" mnemonicParsing="false" onAction="#zoomOut" text="缩小">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="SUBTRACT" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="zoomInitMenuItem" mnemonicParsing="false" onAction="#zoomInit" text="恢复默认缩放">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="DIGIT0" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                    </items>
                  </Menu>
                  <CheckMenuItem fx:id="stateMenu" mnemonicParsing="false" onAction="#onState" selected="true" text="状态栏" />
                  <CheckMenuItem fx:id="wrapMenu" mnemonicParsing="false" onAction="#onWrap" selected="true" text="自动换行" />
                  <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#onHelp" text="帮助" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox fx:id="stateBar" alignment="CENTER" prefHeight="21.0" prefWidth="600.0" spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-border-width: 1 0 0 0; -fx-border-color: #c0c0c0;" BorderPane.alignment="CENTER_LEFT">
