            <Label fx:id="zoomLabel" layoutX="322.0" layoutY="14.0" style="-fx-font-size: 12;" text="100%" />
            <Separator layoutX="355.0" layoutY="14.0" orientation="VERTICAL" prefHeight="15.0" prefWidth="0.0" />
            <Label fx:id="platformLabel" layoutX="363.0" layoutY="14.0" style="-fx-font-size: 12;" text="Windows(CRLF)" />
            <Separator layoutX="355.0" layoutY="14.0" orientation="VERTICAL" prefHeight="15.0" prefWidth="0.0" />
            <Label fx:id="encodingLabel" layoutX="363.0" layoutY="14.0" style="-fx-font-size: 12;" text="UTF-8" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
